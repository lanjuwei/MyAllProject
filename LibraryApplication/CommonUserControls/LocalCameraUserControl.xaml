                    </WindowsFormsHost>
                    <WindowsFormsHost Background="Transparent" Grid.Row="0" Grid.Column="1">
                        <controls:VideoSourcePlayer x:Name="irVideoSource" BorderColor="Transparent" Bounds="0,0,0,0"></controls:VideoSourcePlayer>
                    </WindowsFormsHost>-->
                </Grid>
            </Grid>
        </uc:BusyIndicator>
    </Grid>
</UserControl>
